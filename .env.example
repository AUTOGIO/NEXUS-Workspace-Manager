# NEXUS Configuration Example
# Copy this file to .env and customize for your setup

# AI Model Configuration
NEXUS_MODEL_STORAGE_PATH="/Volumes/MICRO/models"
NEXUS_OLLAMA_ENABLED=true
NEXUS_MLX_ENABLED=true
NEXUS_LM_STUDIO_ENABLED=true

# Dashboard Configuration
NEXUS_DASHBOARD_PORT=8501
NEXUS_INTERACTIVE_DASHBOARD_PORT=8502
NEXUS_AUTO_OPEN_DASHBOARD=true

# System Configuration
NEXUS_LOG_LEVEL=INFO
NEXUS_DEBUG=false
NEXUS_PROFILE_CACHE_ENABLED=true

# Display Configuration
NEXUS_DISPLAY_COUNT=2
NEXUS_PRIMARY_DISPLAY=1
NEXUS_SECONDARY_DISPLAY=2

# External Integrations
NEXUS_N8N_ENABLED=false
NEXUS_N8N_URL=""
NEXUS_N8N_API_KEY=""

# Analytics
NEXUS_ANALYTICS_ENABLED=true
NEXUS_SCREEN_TIME_TRACKING=true
NEXUS_ACTIVITY_WATCH_ENABLED=false
