# üß† NEXUS Workspace Manager - SKHD Configuration
# Comprehensive hotkey system for YABAI + NEXUS integration

# ========================================
# üéØ WINDOW MANAGEMENT HOTKEYS
# ========================================

# Focus windows by direction (Cmd + Shift + Arrow Keys)
cmd + shift - h : yabai -m window --focus west
cmd + shift - j : yabai -m window --focus south  
cmd + shift - k : yabai -m window --focus north
cmd + shift - l : yabai -m window --focus east

# Move windows by direction (Cmd + Shift + Alt + Arrow Keys)
cmd + shift + alt - h : yabai -m window --swap west
cmd + shift + alt - j : yabai -m window --swap south
cmd + shift + alt - k : yabai -m window --swap north
cmd + shift + alt - l : yabai -m window --swap east

# Window sizing (Cmd + Shift + Alt + WASD)
cmd + shift + alt - w : yabai -m window --resize top:0:-50
cmd + shift + alt - s : yabai -m window --resize bottom:0:50
cmd + shift + alt - a : yabai -m window --resize left:-50:0
cmd + shift + alt - d : yabai -m window --resize right:50:0

# ========================================
# üöÄ SPACE MANAGEMENT HOTKEYS
# ========================================

# Switch to specific spaces (Ctrl + Cmd + Number)
ctrl + cmd - 1 : yabai -m space --focus 1
ctrl + cmd - 2 : yabai -m space --focus 2
ctrl + cmd - 3 : yabai -m space --focus 3
ctrl + cmd - 4 : yabai -m space --focus 4
ctrl + cmd - 5 : yabai -m space --focus 5
ctrl + cmd - 6 : yabai -m space --focus 6
ctrl + cmd - 7 : yabai -m space --focus 7
ctrl + cmd - 8 : yabai -m space --focus 8
ctrl + cmd - 9 : yabai -m space --focus 9

# Move windows to specific spaces (Ctrl + Cmd + Shift + Number)
ctrl + cmd + shift - 1 : yabai -m window --space 1
ctrl + cmd + shift - 2 : yabai -m window --space 2
ctrl + cmd + shift - 3 : yabai -m window --space 3
ctrl + cmd + shift - 4 : yabai -m window --space 4
ctrl + cmd + shift - 5 : yabai -m window --space 5
ctrl + cmd + shift - 6 : yabai -m window --space 6
ctrl + cmd + shift - 7 : yabai -m window --space 7
ctrl + cmd + shift - 8 : yabai -m window --space 8
ctrl + cmd + shift - 9 : yabai -m window --space 9

# ========================================
# üé® WINDOW LAYOUT HOTKEYS
# ========================================

# Toggle window float (Cmd + Shift + F)
cmd + shift - f : yabai -m window --toggle float

# Toggle window zoom (Cmd + Shift + Z)
cmd + shift - z : yabai -m window --toggle zoom-fullscreen

# Toggle window padding (Cmd + Shift + P)
cmd + shift - p : yabai -m space --toggle padding

# Toggle window gap (Cmd + Shift + G)
cmd + shift - g : yabai -m space --toggle gap

# ========================================
# üîÑ LAYOUT ROTATION HOTKEYS
# ========================================

# Rotate layout clockwise (Ctrl + Cmd + R)
ctrl + cmd - r : yabai -m space --rotate 90

# Rotate layout counter-clockwise (Ctrl + Cmd + Shift + R)
ctrl + cmd + shift - r : yabai -m space --rotate -90

# Flip layout horizontally (Ctrl + Cmd + H)
ctrl + cmd - h : yabai -m space --mirror x-axis

# Flip layout vertically (Ctrl + Cmd + V)
ctrl + cmd - v : yabai -m space --mirror y-axis

# ========================================
# üéØ NEXUS-SPECIFIC HOTKEYS
# ========================================

# Quick profile switching (Ctrl + Cmd + P)
ctrl + cmd - p : /usr/bin/osascript -e 'tell application "System Events" to display dialog "Select Profile:" buttons {"Work", "Personal", "AI Research", "Cancel"} default button "Work"'

# Toggle NEXUS dashboard (Ctrl + Cmd + D)
ctrl + cmd - d : /usr/bin/osascript -e 'tell application "Terminal" to do script "cd /Users/giovannini/Documents/GitHub/NEXUS-Workspace-Manager && streamlit run dashboard/interactive_guide.py"'

# Quick window arrangement (Ctrl + Cmd + A)
ctrl + cmd - a : yabai -m space --balance

# Emergency reset (Ctrl + Cmd + Shift + R)
ctrl + cmd + shift - r : yabai -m space --reset

# ========================================
# üöÄ APPLICATION LAUNCHING HOTKEYS
# ========================================

# Quick app launcher (Ctrl + Cmd + L)
ctrl + cmd - l : /usr/bin/osascript -e 'tell application "System Events" to key code 40 using {command down, space down}'

# Development tools (Ctrl + Cmd + Shift + D)
ctrl + cmd + shift - d : open -a "Cursor"
ctrl + cmd + shift - t : open -a "iTerm"
ctrl + cmd + shift - o : open -a "Obsidian"

# Productivity tools (Ctrl + Cmd + Shift + P)
ctrl + cmd + shift - n : open -a "Notes"
ctrl + cmd + shift - s : open -a "Safari"
ctrl + cmd + shift - v : open -a "Vivaldi"

# ========================================
# üîß UTILITY HOTKEYS
# ========================================

# Reload SKHD configuration (Ctrl + Cmd + Shift + S)
ctrl + cmd + shift - s : skhd --reload

# Show YABAI status (Ctrl + Cmd + Shift + Y)
ctrl + cmd + shift - y : /usr/bin/osascript -e 'tell application "Terminal" to do script "yabai -m query --windows"'

# Show space status (Ctrl + Cmd + Shift + Space)
ctrl + cmd + shift - space : /usr/bin/osascript -e 'tell application "Terminal" to do script "yabai -m query --spaces"'

# ========================================
# üéÆ GAMING & ENTERTAINMENT HOTKEYS
# ========================================

# Gaming mode (Ctrl + Cmd + G)
ctrl + cmd - g : yabai -m space --layout bsp && yabai -m space --padding abs:10:10:10:10

# Movie mode (Ctrl + Cmd + M)
ctrl + cmd - m : yabai -m window --toggle zoom-fullscreen

# ========================================
# üì± MOBILE DEVICE HOTKEYS
# ========================================

# iPhone simulator (Ctrl + Cmd + I)
ctrl + cmd - i : open -a "Simulator"

# iPad simulator (Ctrl + Cmd + Shift + I)
ctrl + cmd + shift - i : open -a "Simulator" && /usr/bin/osascript -e 'tell application "Simulator" to activate'

# ========================================
# üîí SECURITY & PRIVACY HOTKEYS
# ========================================

# Lock screen (Ctrl + Cmd + L)
ctrl + cmd - l : /System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend

# Quick logout (Ctrl + Cmd + Shift + Q)
ctrl + cmd + shift - q : /usr/bin/osascript -e 'tell application "System Events" to log out'

# ========================================
# üìä SYSTEM MONITORING HOTKEYS
# ========================================

# Activity Monitor (Ctrl + Cmd + Shift + A)
ctrl + cmd + shift - a : open -a "Activity Monitor"

# System Information (Ctrl + Cmd + Shift + I)
ctrl + cmd + shift - i : /usr/bin/osascript -e 'tell application "System Information" to activate'

