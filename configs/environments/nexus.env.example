# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Model Storage Paths
NEXUS_MODEL_PATH="/Volumes/MICRO/LM_STUDIO_MODELS"
NEXUS_MODEL_CACHE_PATH="~/.cache/nexus/models"
NEXUS_MODEL_TEMP_PATH="/tmp/nexus/models"

# AI Integration Settings
NEXUS_AI_ENABLED="true"
NEXUS_AUTO_OPTIMIZE="true"
NEXUS_MODEL_AUTO_LOAD="true"
NEXUS_BACKGROUND_MONITORING="true"

# Model Selection Preferences
NEXUS_DEFAULT_MODEL="lmstudio-community/Qwen3-4B-Instruct-2507-MLX-4bit"
NEXUS_FALLBACK_MODEL="lmstudio-community/LFM2-1.2B-MLX-8bit"
NEXUS_PERFORMANCE_MODE="balanced"  # lightweight, balanced, high_performance

# =============================================================================
# WORKSPACE CONFIGURATION
# =============================================================================

# Workspace Profiles
NEXUS_DEFAULT_PROFILE="work_profile"
NEXUS_AUTO_PROFILE_SWITCHING="true"
NEXUS_CONTEXT_AWARE_OPTIMIZATION="true"

# Display Configuration
NEXUS_DISPLAY_AUTO_DETECT="true"
NEXUS_DISPLAY_OPTIMIZATION="true"
NEXUS_MULTI_DISPLAY_SUPPORT="true"

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
NEXUS_LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR
NEXUS_LOG_FILE="logs/nexus.log"
NEXUS_LOG_ROTATION="true"
NEXUS_LOG_MAX_SIZE="100MB"
NEXUS_LOG_BACKUP_COUNT="5"

# Performance Monitoring
NEXUS_PERFORMANCE_TRACKING="true"
NEXUS_MEMORY_MONITORING="true"
NEXUS_CPU_MONITORING="true"
NEXUS_GPU_MONITORING="true"

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# YABAI Integration
NEXUS_YABAI_ENABLED="true"
NEXUS_YABAI_AUTO_START="true"
NEXUS_YABAI_RULES_PATH="configs/yabai"

# SKHD Integration
NEXUS_SKHD_ENABLED="true"
NEXUS_SKHD_CONFIG_PATH="configs/skhd"

# N8N Integration
NEXUS_N8N_ENABLED="true"
NEXUS_N8N_PORT="5679"
NEXUS_N8N_WEBHOOK_URL="http://localhost:5679/webhook/nexus"

# ActivityWatch Integration
NEXUS_ACTIVITYWATCH_ENABLED="true"
NEXUS_ACTIVITYWATCH_HOST="localhost"
NEXUS_ACTIVITYWATCH_PORT="5600"

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development Mode
NEXUS_DEV_MODE="false"
NEXUS_DEBUG_ENABLED="false"
NEXUS_TESTING_MODE="false"

# API Configuration
NEXUS_API_ENABLED="true"
NEXUS_API_HOST="localhost"
NEXUS_API_PORT="8000"
NEXUS_API_DEBUG="false"

# Dashboard Configuration
NEXUS_DASHBOARD_ENABLED="true"
NEXUS_DASHBOARD_PORT="8501"
NEXUS_DASHBOARD_HOST="localhost"

# =============================================================================
# SECURITY AND PRIVACY
# =============================================================================

# Security Settings
NEXUS_SECURE_MODE="true"
NEXUS_ENCRYPTION_ENABLED="true"
NEXUS_SSL_ENABLED="false"

# Privacy Settings
NEXUS_DATA_COLLECTION="true"
NEXUS_ANONYMOUS_ANALYTICS="true"
NEXUS_USER_DATA_RETENTION="30"  # days

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Memory Management
NEXUS_MAX_MEMORY_USAGE="80"  # percentage
NEXUS_MEMORY_CLEANUP_INTERVAL="300"  # seconds
NEXUS_MODEL_MEMORY_LIMIT="4GB"

# CPU Management
NEXUS_MAX_CPU_USAGE="90"  # percentage
NEXUS_CPU_THREAD_LIMIT="8"
NEXUS_BACKGROUND_TASK_LIMIT="5"

# GPU/Neural Engine
NEXUS_NEURAL_ENGINE_ENABLED="true"
NEXUS_GPU_ACCELERATION="true"
NEXUS_MODEL_QUANTIZATION="true"

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
NEXUS_BACKUP_ENABLED="true"
NEXUS_BACKUP_INTERVAL="86400"  # seconds (24 hours)
NEXUS_BACKUP_RETENTION="7"  # days
NEXUS_BACKUP_PATH="backups"

# Recovery Settings
NEXUS_AUTO_RECOVERY="true"
NEXUS_RECOVERY_CHECK_INTERVAL="3600"  # seconds (1 hour)
NEXUS_CRASH_REPORTING="true"

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Notification Settings
NEXUS_NOTIFICATIONS_ENABLED="true"
NEXUS_NOTIFICATION_SOUND="true"
NEXUS_NOTIFICATION_BANNER="true"

# Notification Types
NEXUS_NOTIFY_PROFILE_SWITCH="true"
NEXUS_NOTIFY_MODEL_LOAD="true"
NEXUS_NOTIFY_ERRORS="true"
NEXUS_NOTIFY_PERFORMANCE="false"
